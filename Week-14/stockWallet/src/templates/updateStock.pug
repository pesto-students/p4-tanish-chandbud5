doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        h2 #{object.stock} worth #{object.value}
        form(action=`${object._id}`, method="post") 
            input(type="text", name="stock" value=`${object.stock}`)
            input(type="number", name="value" value=`${object.value}`)
            input(type="submit", value="Update")